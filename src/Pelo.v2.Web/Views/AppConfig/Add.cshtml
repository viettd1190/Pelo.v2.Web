@model Pelo.v2.Web.Models.AppConfig.AppConfigInsert

@{
    ViewBag.Title = "Thêm mới cấu hình";
    Layout = "_Layout";
}

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","AppConfig")">Danh sách cấu hình</a></li>
    <li class="active">Thêm mới cấu hình</li>
</ol>

<section class="card">
    <div class="card-block">
        <form asp-controller="AppConfig" asp-action="Add" method="post" id="appconfig-form">
            @Html.ValidationSummary()
            <div class="row">
                <div class="col-lg-12">
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="Name">Tên</label>
                        <input asp-for="Name" class="form-control" type="text" placeholder="Tên"/>
                        @Html.ValidationMessageFor(c => c.Name)
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="Value">Giá trị</label>
                        <input asp-for="Value" class="form-control" type="text" placeholder="Giá trị"/>
                        @Html.ValidationMessageFor(c => c.Value)
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="Description">Ghi chú</label>
                        <input asp-for="Description" class="form-control" type="text" placeholder="Ghi chú"/>
                        @Html.ValidationMessageFor(c => c.Description)
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset class="form-group">
                        <button type="submit" class="btn btn-primary">Thêm mới</button>
                        <a class="btn btn-default" href="@Url.Action("Index", "AppConfig")">Hủy</a>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</section>

@section js{ 
    <script>
        $(document).ready(function () {
            $('.opened').removeClass('opened');
            $('.row-active').removeClass('row-active');
            $('#liSystem').addClass('opened');
            $('#liAppConfig').addClass('row-active');
        })
    </script>
}
