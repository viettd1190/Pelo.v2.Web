@model DateTime
<div class="form-group">
    <div class="input-group date">
        <input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@( string.Format("{0:dd-MM-yyyy}",(Model > DateTime.MinValue ? Model : DateTime.Today)))" class="form-control">
        <span class="input-group-addon">
            <i class="font-icon font-icon-calend"></i>
        </span>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#@Html.IdForModel()').daterangepicker({
                singleDatePicker:true,
                showDropdowns:true,
                locale:{
                        format:'DD-MM-YYYY HH:mm'
                    }
            });
    });
</script>