@model Pelo.v2.Web.Models.Customer.CustomerDetailModel

<div class="col-lg-6">
    <fieldset class="form-group">
        <label class="form-label semibold">Mã khách hàng: <span class="label-content">@Model.Code</span></label>
    </fieldset>
</div>
<div class="col-lg-6">
    <fieldset class="form-group">
        <label class="form-label semibold">Người tạo: <a class="label-content" href="tel:@Model.UserCreatedPhone">@Model.UserCreated</a></label>
    </fieldset>
</div>
<div class="col-lg-6">
    <fieldset class="form-group">
        <label class="form-label semibold">Tên khách hàng: <span class="label-content">@Model.Name</span></label>
    </fieldset>
</div>
<div class="col-lg-6">
    <fieldset class="form-group">
        <label class="form-label semibold">Ngày tạo: <span class="label-content">@string.Format(AppUtil.DATE_TIME_FORMAT, Model.DateCreated)</span></label>
    </fieldset>
</div>
<div class="col-lg-6">
    <fieldset class="form-group">
        <label class="form-label semibold">Ngày sinh: <span class="label-content"></span></label>
    </fieldset>
</div>
<div class="col-lg-6">
    <fieldset class="form-group">
        <label class="form-label semibold">Email: <span class="label-content"><a class="label-content" href="mailto:@Model.Email">@Model.Email</a></span></label>
    </fieldset>
</div>
<div class="col-lg-12">
    <fieldset class="form-group">
        <label class="form-label semibold">Số điện thoại: <a class="label-content" href="tel:@Model.Phone">@Model.Phone</a></label>
    </fieldset>
</div>
@{
    if (!string.IsNullOrEmpty(Model.Phone2))
    {
        <div class="col-lg-12">
            <fieldset class="form-group">
                <label class="form-label semibold">Số điện thoại 2: <a class="label-content" href="tel:@Model.Phone2">@Model.Phone2</a></label>
            </fieldset>
        </div>
    }
    if (!string.IsNullOrEmpty(Model.Phone3))
    {
        <div class="col-lg-12">
            <fieldset class="form-group">
                <label class="form-label semibold">Số điện thoại 3: <a class="label-content" href="tel:@Model.Phone3">@Model.Phone3</a></label>
            </fieldset>
        </div>
    }
    if (!string.IsNullOrEmpty(Model.Province))
    {
        <div class="col-lg-12">
            <fieldset class="form-group">
                <label class="form-label semibold">Địa chỉ: <span class="label-content">@Model.Address, @Model.Ward, @Model.District, @Model.Province</span></label>
            </fieldset>
        </div>
    }
    else
    {
        <div class="col-lg-12">
            <fieldset class="form-group">
                <label class="form-label semibold">Địa chỉ: <span class="label-content">@Model.Address</span></label>
            </fieldset>
        </div>
    }
}
<div class="col-lg-6">
    <fieldset class="form-group">
        <label class="form-label semibold">Nhóm khách hàng: <span class="label-content">@Model.CustomerGroup</span></label>
    </fieldset>
</div>
<div class="col-lg-6">
    <fieldset class="form-group">
        <label class="form-label semibold">Mức độ thân thiết: <span class="label-content">@Model.CustomerVip</span></label>
    </fieldset>
</div>