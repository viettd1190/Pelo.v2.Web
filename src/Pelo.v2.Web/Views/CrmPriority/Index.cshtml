@using Microsoft.AspNetCore.Routing
@using Pelo.v2.Web.Models.CrmPriority
@using Pelo.v2.Web.Models.Datatables
@using Pelo.v2.Web.Models.Datatables.Render
@model Pelo.v2.Web.Models.CrmPriority.CrmPrioritySearchModel
@{
  ViewBag.Title = "Danh sách mức độ khẩn cấp CRM";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@section cssPlugin{ 
    <link rel="stylesheet" href="@Url.Content("~/startui/css/lib/datatables-net/datatables.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/startui/css/separate/vendor/datatables-net.min.css")">
}

@section css{ 
    <style>
        .box-typical.box-typical-dashboard .box-typical-body {
            height:auto !important;
        }
    </style>
}

@section jsPlugin {
    <script src="@Url.Content("~/startui/js/lib/datatables-net/datatables.min.js")"></script>
}

<div class="row">
    <div class="col-xl-12 dahsboard-column">
        <section class="box-typical box-typical-dashboard panel panel-default scrollable">
            <header class="box-typical-header panel-heading">
                <h3 class="panel-title">Danh sách mức độ khẩn cấp CRM</h3>
            </header>
            <div class="box-typical-body panel-body">
                <div class="row" style="padding:15px;">
                    <div class="col-lg-12">
                        <fieldset class="form-group">
                            <label class="form-label semibold" for="Name">Tên mức độ</label>
                            <input asp-for="Name" class="form-control" type="text" placeholder="Tên mức độ"/>
                        </fieldset>
                    </div>
                    <div class="col-xs-12">
                        <button class="btn btn-primary" id="search-crmPriority">Tìm kiếm</button>
                        <a class="btn btn-success" href="@Url.Action("Add")">Thêm mới</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<section class="card">
    <div class="card-block">
        @await Html.PartialAsync("Table",new DataTablesModel
   {
       Name="crmPriority-grid",
       UrlRead = new DataUrl("GetList","CrmPriority",null),
       UrlDelete = new DataUrl("Delete","CrmPriority",null),
       SearchButtonId = "search-crmPriority",
       Filters = new List<FilterParameter> {
                                                   new FilterParameter(nameof(Model.Name)),
                                           },
       ColumnCollection = new List<ColumnProperty> {
                                                           new ColumnProperty(nameof(CrmPriorityModel.Name))
                                                           {
                                                                   Title = "Tên"
                                                           },
                                                           new ColumnProperty(nameof(CrmPriorityModel.Color))
                                                           {
                                                                   Title = "Màu sắc",
                                                                   Render = new RenderCustom("displayColor")
                                                           },
                                                           new ColumnProperty(nameof(CrmPriorityModel.Id))
                                                           {
                                                                   Title = "",
                                                                   Width = "40",
                                                                   Orderable = false,
                                                                   ClassName =  NopColumnClassDefaults.Button,
                                                                   Render = new RenderButtonEdit(new DataUrl("CrmPriority/Edit"))
                                                           },
                                                           new ColumnProperty(nameof(CrmPriorityModel.Id))
                                                           {
                                                                   Title = "",
                                                                   Width = "40",
                                                                   Orderable = false,
                                                                   ClassName =  NopColumnClassDefaults.Button,
                                                                   Render = new RenderButtonRemove("Remove")
                                                           }
                                                   }
   })
    </div>
</section>

@section js{ 
    <script>
        $(document).ready(function() {
            $('.panel').lobiPanel({
                    sortable:false,
                    draggable:false,
                    resize:'none'
                });
            reloadDataWhenEnter('@nameof(Model.Name)');
        });
        function displayColor(data,type,row,meta) {
            return '<div style="text-align:center;margin:auto;"><span class="label" style="width:70px;background-color:'+
                data+
                '">'+
                data+
                '</span></div>';
        }
    </script>
}
