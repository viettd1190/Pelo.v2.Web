@model Pelo.v2.Web.Models.CrmPriority.CrmPriorityModel
@{
    ViewBag.Title = "Thêm mới mức độ khẩn cấp CRM";
    Layout = "_Layout";
}
@section cssPlugin{
    <link rel="stylesheet" href="@Url.Content("~/lib/spectrum/spectrum.css")">
}
@section jsPlugin {
    <script src="@Url.Content("~/lib/spectrum/spectrum.js")"></script>
}
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","CrmPriority")">Danh sách mức độ khẩn cấp CRM</a></li>
    <li class="active">Thêm mới mức độ khẩn cấp CRM</li>
</ol>

<section class="card">
    <div class="card-block">
        <form asp-controller="CrmPriority" asp-action="Add" method="post" id="crmpriority-form">
            @Html.ValidationSummary()
            <div class="row">
                <div class="col-lg-12">
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="Name">Tên</label>
                        <input asp-for="Name" class="form-control" type="text" placeholder="Tên" />
                        @Html.ValidationMessageFor(c => c.Name)
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="Color">Màu sắc</label>
                        <input type='color' id="color" class='basic' value='#f594d0' />
                        @Html.ValidationMessageFor(c => c.Color)
                    </fieldset>
                </div>

                <div class="col-lg-12">
                    <fieldset class="form-group">
                        <button type="submit" class="btn btn-primary">Thêm mới</button>
                        <a class="btn btn-default" href="@Url.Action("Index", "CrmPriority")">Hủy</a>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</section>

@section js{
    <script>
        $(document).ready(function () {
            $('.opened').removeClass('opened');
            $('.row-active').removeClass('row-active');
            $('#liCrm').addClass('opened');
            $('#liCrmPriority').addClass('row-active');
        })
    </script>
}
