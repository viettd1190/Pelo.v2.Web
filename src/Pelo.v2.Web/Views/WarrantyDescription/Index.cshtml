@using Microsoft.AspNetCore.Routing
@using Pelo.v2.Web.Models.TaskStatus
@using Pelo.v2.Web.Models.Datatables
@using Pelo.v2.Web.Models.Datatables.Render
@using Pelo.v2.Web.Models.WarrantyDescription
@model Pelo.v2.Web.Models.WarrantyDescription.WarrantyDescriptionSearchModel
@{
    ViewBag.Title = "Danh sách mô tả bảo hành";
   Layout = "~/Views/Shared/_Layout.cshtml";
}

@section cssPlugin{
    <link rel="stylesheet" href="@Url.Content("~/startui/css/lib/datatables-net/datatables.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/startui/css/separate/vendor/datatables-net.min.css")">
}

@section css{
    <style>
        .box-typical.box-typical-dashboard .box-typical-body {
            height: auto !important;
        }
    </style>
}

@section jsPlugin {
    <script src="@Url.Content("~/startui/js/lib/datatables-net/datatables.min.js")"></script>
}

<div class="row">
    <div class="col-xl-12 dahsboard-column">
        <section class="box-typical box-typical-dashboard panel panel-default scrollable">
            <header class="box-typical-header panel-heading">
                <h3 class="panel-title">Danh sách mô tả bảo hành</h3>
            </header>
            <div class="box-typical-body panel-body">
                <div class="row" style="padding:15px;">
                    <div class="col-lg-12">
                        <fieldset class="form-group">
                            <label class="form-label semibold" for="Name">Tên mô tả bảo hành</label>
                            <input asp-for="Name" class="form-control" type="text" placeholder="Tên trạng thái" />
                        </fieldset>
                    </div>
                    <div class="col-xs-12">
                        <button class="btn btn-primary" id="search-warrantyDescription ">Tìm kiếm</button>
                        <a class="btn btn-success" href="@Url.Action("Add")">Thêm mới</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<section class="card">
    <div class="card-block">
        @await Html.PartialAsync("Table", new DataTablesModel
   {
       Name = "warrantyDescription-grid",
       UrlRead = new DataUrl("GetList", "WarrantyDescription", null),
       UrlDelete = new DataUrl("Delete", "WarrantyDescription", null),
       SearchButtonId = "search-warrantyDescription",
       Ordering = false,
       Filters = new List<FilterParameter> {
                                                   new FilterParameter(nameof(Model.Name)),
                                           },
       ColumnCollection = new List<ColumnProperty> {
                                                           new ColumnProperty(nameof(WarrantyDescriptionModel.Name))
                                                           {
                                                                   Title = "Tên"
                                                           },
                                                           new ColumnProperty(nameof(WarrantyDescriptionModel.Id))
                                                           {
                                                                   Title = "",
                                                                   Width = "40",
                                                                   Orderable = false,
                                                                   ClassName =  NopColumnClassDefaults.Button,
                                                                   Render = new RenderButtonEdit(new DataUrl("WarrantyDescription/Edit"))
                                                           },
                                                           new ColumnProperty(nameof(TaskStatusModel.Id))
                                                           {
                                                                   Title = "",
                                                                   Width = "40",
                                                                   Orderable = false,
                                                                   ClassName =  NopColumnClassDefaults.Button,
                                                                   Render = new RenderButtonRemove("Remove")
                                                           }
                                                   }
   })
    </div>
</section>

@section js{
    <script>
        $(document).ready(function () {
            $('.opened').removeClass('opened');
            $('.row-active').removeClass('row-active');
            $('#liWarranty').addClass('opened');
            $('#liWarrantyDescription').addClass('row-active');
            $('.panel').lobiPanel({
                    sortable:false,
                    draggable:false,
                    resize:'none'
                });
            reloadDataWhenEnter('@nameof(Model.Name)');
        });
    </script>
}
