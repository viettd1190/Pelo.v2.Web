@model Pelo.v2.Web.Models.CrmStatus.CrmStatusModel
@{
    ViewBag.Title = "Thêm mới trạng thái CRM";
    Layout = "_Layout";
}

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","CrmStatus")">Danh sách trạng thái CRM</a></li>
    <li class="active">Thêm mới cấu hình</li>
</ol>

<section class="card">
    <div class="card-block">
        <form asp-controller="AppConfig" asp-action="Add" method="post" id="appconfig-form">
            @Html.ValidationSummary()
            <div class="row">
                <div class="col-lg-12">
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="Name">Tên</label>
                        <input asp-for="Name" class="form-control" type="text" placeholder="Tên" />
                        @Html.ValidationMessageFor(c => c.Name)
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="IsSendSms">Gửi tin nhắn</label>
                        <input asp-for="IsSendSms" class="form-control" type="checkbox" title="Gửi tin nhắn" />
                        @Html.ValidationMessageFor(c => c.IsSendSms)
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="SmsContent">Nội dung</label>
                        <input asp-for="SmsContent" class="form-control" type="text" placeholder="Nội dung" />
                        @Html.ValidationMessageFor(c => c.SmsContent)
                    </fieldset>
                </div>

                <div class="col-lg-12">
                    <fieldset class="form-group">
                        <button type="submit" class="btn btn-primary">Thêm mới</button>
                        <a class="btn btn-default" href="@Url.Action("Index", "CrmStatus")">Hủy</a>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</section>

@section js{
    <script>
        $(document).ready(function () {
            $('.opened').removeClass('opened');
            $('.row-active').removeClass('row-active');
            $('#liCrm').addClass('opened');
            $('#liCrmStatus').addClass('row-active');
        })
    </script>
}
